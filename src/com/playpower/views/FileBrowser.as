package com.playpower.views{	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import com.carlcalderon.arthropod.Debug;	import com.playpower.core.*;	import com.playpower.events.CustomEvent;	import flash.display.Graphics;	public class FileBrowser extends Sprite	{		private var _controller:Controller;		private var _fileList:Sprite;				public function FileBrowser()		{			_controller = Controller.getInstance();			this.addEventListener(Event.ADDED_TO_STAGE, _onAddedToStage, false, 0, true);		}		public function _onAddedToStage($e:Event):void		{			Debug.log("FileBrowser added to stage");			this.removeEventListener(Event.ADDED_TO_STAGE, _onAddedToStage);						_fileList = new Sprite();			var g:Graphics = _fileList.graphics;					}				public function destroy():void		{			_controller = null;		}	}}