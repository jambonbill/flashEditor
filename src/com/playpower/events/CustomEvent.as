/*** @author sgrant*/package com.playpower.events{	import flash.events.Event;		public class CustomEvent extends Event	{		public static const BUTTON_OVER:String = "onButtonOver";		public static const BUTTON_OUT:String = "onButtonOut";		public static const BUTTON_CLICK:String = "onButtonClick";		public static const BUTTON_DOWN:String = "onButtonDown";		public static const BUTTON_UP:String = "onButtonUp";		public static const SLIDER_PROGRESS:String = "onSliderProgress";		public static const COLOR_SAMPLE:String = "onColorSample";		public static const UPDATE_BUFFER:String = "onUpdateBuffer";				public var objInfo:Object = {};						public function CustomEvent(type:String, objInfo:Object = null, bubbles:Boolean = false, cancelable:Boolean = false)		{	//trace("new CustomEvent: " + arguments);			super(type, bubbles, cancelable);						this.objInfo = objInfo;		}				public override function clone():Event		{			return new CustomEvent(type, objInfo, bubbles, cancelable);		}				public override function toString():String		{			return formatToString("CustomEvent", "type", "objInfo", "bubbles", "cancelable", "eventPhase");		}	}}