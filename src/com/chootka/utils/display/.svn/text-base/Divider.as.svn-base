package com.utils.display {	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import com.utils.text.MetlifeTextField;		/**	 * @author sgrant	 */	public class Divider extends MovieClip 	{		private var _xmlContent:XML;		private var _xmlStyles:XMLList;		private var _txtField:TextField;						public function Divider()		{			//trace("Divider");		}				public function init(xmlContent:XML, xmlStyles:XMLList):void		{			//trace("init divider");			_xmlContent = new XML();			_xmlContent = xmlContent;						_xmlStyles = new XMLList();			_xmlStyles = xmlStyles;						createLabel();		}				private function createLabel():void		{			var tfFormat:TextFormat = new TextFormat();			tfFormat.letterSpacing = 1.5;						_txtField = MetlifeTextField.getTextField(_xmlContent.text.text(), _xmlContent, _xmlStyles, TextFieldAutoSize.LEFT, tfFormat);			this.addChild(_txtField);		}			}	}